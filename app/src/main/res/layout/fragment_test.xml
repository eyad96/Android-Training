<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:text="This is the Test Fragemnt"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/textView"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/navButton"
            android:layout_marginTop="56dp"
            android:text="Go To Next Fragment"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_marginTop="35dp"
              android:id="@+id/EditText1"
              app:layout_constraintTop_toBottomOf="@+id/navButton" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toEndOf="parent"/>

    <Button android:layout_width="wrap_content"
            android:text="Save Pref"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"

            app:layout_constraintTop_toBottomOf="@+id/EditText1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/button"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="Show Pref"
            android:id="@+id/ShowPref"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button android:layout_width="wrap_content"
            android:text="Show RecyclerView"
            android:id="@+id/showRecyclerView"
            android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>